<ResourceDictionary 
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
	xmlns:sampleBrowser="using:ActiproSoftware.SampleBrowser"
	>

	<ControlTheme x:Key="{x:Type sampleBrowser:PrivateIndicator}" TargetType="sampleBrowser:PrivateIndicator">
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Padding" Value="2,0" />
		<Setter Property="ToolTip.Tip" Value="Private content not included in the public project." />

		<Setter Property="Template">
			<ControlTemplate>

				<actipro:Badge Classes="theme-solid danger" Content="DEV" BorderThickness="0"
							   Padding="{TemplateBinding Padding}" />

			</ControlTemplate>
		</Setter>
	</ControlTheme>
	
</ResourceDictionary>