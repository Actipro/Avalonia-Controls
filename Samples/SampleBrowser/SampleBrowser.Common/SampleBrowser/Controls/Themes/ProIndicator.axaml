<ResourceDictionary 
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:actipro="http://schemas.actiprosoftware.com/avaloniaui"
	xmlns:sampleBrowser="using:ActiproSoftware.SampleBrowser"
	>

	<ControlTheme x:Key="{x:Type sampleBrowser:ProIndicator}" TargetType="sampleBrowser:ProIndicator">
		<Setter Property="Background" Value="{actipro:ThemeResource AvaloniaBrandBrush}" />
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Padding" Value="2,0" />
		<Setter Property="ToolTip.Tip" Value="Included in a paid Pro bundle of components and UI controls." />
		<Setter Property="Template">
			<ControlTemplate>

				<actipro:Badge Classes="theme-solid" Content="PRO" BorderThickness="0"
							   Padding="{TemplateBinding Padding}"
							   Background="{TemplateBinding Background}" />

			</ControlTemplate>
		</Setter>
	</ControlTheme>
	
</ResourceDictionary>