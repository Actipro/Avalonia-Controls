						</actipro:SegmentedBar>

						<actipro:SegmentedBar Classes="theme-solid" Grid.Row="2" Grid.Column="5" IsEnabled="False">
							<actipro:SegmentedBarItem>Disabled</actipro:SegmentedBarItem>
							<actipro:SegmentedBarItem>2</actipro:SegmentedBarItem>
							<actipro:SegmentedBarItem>3</actipro:SegmentedBarItem>
						</actipro:SegmentedBar>

						<actipro:SegmentedBar Classes="theme-soft" Grid.Row="2" Grid.Column="7" IsEnabled="False">
							<actipro:SegmentedBarItem>Disabled</actipro:SegmentedBarItem>
							<actipro:SegmentedBarItem>2</actipro:SegmentedBarItem>
							<actipro:SegmentedBarItem>3</actipro:SegmentedBarItem>
						</actipro:SegmentedBar>

						<actipro:SegmentedBar Classes="theme-subtle" Grid.Row="2" Grid.Column="9" IsEnabled="False">
							<actipro:SegmentedBarItem>Disabled</actipro:SegmentedBarItem>
							<actipro:SegmentedBarItem>2</actipro:SegmentedBarItem>
							<actipro:SegmentedBarItem>3</actipro:SegmentedBarItem>
						</actipro:SegmentedBar>

					</Grid>
				</ScrollViewer>
			</Border>

			<sampleBrowser:ControlExample.CodeExamples>
				<sampleBrowser:CodeExample xml:space="preserve">
					<![CDATA[
<actipro:SegmentedBar Classes="theme-elevated" ItemsSource="{Binding Items}" />

<actipro:SegmentedBar Classes="theme-outline" ItemsSource="{Binding Items}" />

<actipro:SegmentedBar Classes="theme-solid" ItemsSource="{Binding Items}" />

<actipro:SegmentedBar Classes="theme-soft" ItemsSource="{Binding Items}" />

<actipro:SegmentedBar Classes="theme-subtle" ItemsSource="{Binding Items}" />
					]]>
				</sampleBrowser:CodeExample>
			</sampleBrowser:ControlExample.CodeExamples>
		</sampleBrowser:ControlExample>


