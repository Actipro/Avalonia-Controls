	<UserControl.Styles>
		<!-- ToggleSwitch looks better with far affinity when used in a SettingsCard -->
		<Style Selector="actipro|SettingsCard:not(:wrapped) > ToggleSwitch">
			<Setter Property="actipro:ThemeProperties.ToggleSwitchHasFarAffinity" Value="True" />
		</Style>
		<Style Selector="actipro|SettingsCard > Slider">
			<Setter Property="MinWidth" Value="150" />
		</Style>
		<Style Selector="actipro|SettingsCard > TextBox">
			<Setter Property="MinWidth" Value="150" />
		</Style>
		<Style Selector="actipro|InfoBar[Severity=Information]">
			<Setter Property="CornerRadius" Value="{actipro:ThemeResource SettingsCardCornerRadius}" />
			<Style Selector="^[Severity=Information]">
				<Setter Property="Background" Value="{actipro:ThemeResource ControlBackgroundBrushSoftAccent}" />
			</Style>
		</Style>
	</UserControl.Styles>

	<sampleBrowser:ControlExampleItemsControl
		Header="Use SettingsCard, SettingsExpander, and SettingsGroup to organize and present configurable settings">

		<sampleBrowser:ControlExampleItemsControl.Documentation>
			<sampleBrowser:ControlExampleLinkItem Title="Settings card" Url="https://www.actiprosoftware.com/docs/controls/avalonia/fundamentals/controls/settings-card" />
			<sampleBrowser:ControlExampleLinkItem Title="Settings expander" Url="https://www.actiprosoftware.com/docs/controls/avalonia/fundamentals/controls/settings-expander" />
			<sampleBrowser:ControlExampleLinkItem Title="Settings group" Url="https://www.actiprosoftware.com/docs/controls/avalonia/fundamentals/controls/settings-group" />
		</sampleBrowser:ControlExampleItemsControl.Documentation>

		<sampleBrowser:ControlExample
			Header="Sample gallery">

			<StackPanel>

				<actipro:SettingsGroup Header="Appearance">
					<actipro:SettingsGroup.ItemsHeader>
						<actipro:InfoBar
							Message="This gallery is only for layout demonstration and changing the settings will not have an effect. This notice is an example of ItemsHeader using InfoBar."
							CornerRadius="{actipro:ThemeResource SettingsCardCornerRadius}"
							Margin="0,0,0,2"/>
					</actipro:SettingsGroup.ItemsHeader>

					<actipro:SettingsCard Header="App theme">
						<actipro:SettingsCard.HeaderIcon>
							<PathIcon Data="{StaticResource icon-fluent-mdl2-color}" FlowDirection="LeftToRight" />
						</actipro:SettingsCard.HeaderIcon>
						<actipro:SettingsCard.Description>
							<actipro:HyperlinkTextBlock FontWeight="SemiBold" FontSize="{actipro:ThemeResource DefaultFontSizeSmall}"
								Text="Open system settings"
								Command="{Binding #sampleRootControl.SettingClickedCommand}" CommandParameter="System Settings"
								/>
						</actipro:SettingsCard.Description>
						<ComboBox SelectedIndex="2">
							<ComboBoxItem>Light</ComboBoxItem>
							<ComboBoxItem>Dark</ComboBoxItem>
							<ComboBoxItem>System default</ComboBoxItem>
						</ComboBox>
					</actipro:SettingsCard>

					<actipro:SettingsCard Header="Use high contrast colors" Description="Higher contrast colors improve accessibility">
						<ToggleSwitch IsChecked="False"/>
					</actipro:SettingsCard>

					<actipro:SettingsCard Header="System fonts" IsWrapped="True">
						<actipro:SettingsCard.HeaderIcon>
							<PathIcon Data="{StaticResource icon-fluent-mdl2-font}" FlowDirection="LeftToRight" />
						</actipro:SettingsCard.HeaderIcon>
						<CheckBox x:Name="galleryCustomizeSystemFonts" IsChecked="False" Content="Allow system fonts to be customized" />
					</actipro:SettingsCard>

					<actipro:SettingsExpander Header="Heading font" Description="Configure the font used for heading typography (requires 'Allow system fonts to be customized')"
						IsItemsHeaderVisible="{Binding !#galleryCustomizeSystemFonts.IsChecked}">
						
						<actipro:SettingsExpander.ItemsHeader>
							<actipro:InfoBar CornerRadius="0" BorderThickness="0" CanClose="False" Severity="Error"
								Message="These settings require 'Allow system fonts to be customized'."
								Padding="{actipro:ScaledThickness '2.5,1'}" />
						</actipro:SettingsExpander.ItemsHeader>

						<actipro:SettingsCard Header="Font family" IsEnabled="{Binding #galleryCustomizeSystemFonts.IsChecked}">
							<ComboBox SelectedIndex="1">
								<ComboBoxItem>Arial</ComboBoxItem>
								<ComboBoxItem>Calibri</ComboBoxItem>
								<ComboBoxItem>Consolas</ComboBoxItem>
								<ComboBoxItem>Tahoma</ComboBoxItem>
							</ComboBox>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="Font size (pt)" IsEnabled="{Binding #galleryCustomizeSystemFonts.IsChecked}">
							<StackPanel Orientation="Horizontal" MinWidth="150">
								<TextBlock Text="A" FontSize="12" VerticalAlignment="Center" />
								<Slider Margin="10,0" Minimum="10" Maximum="50" MinWidth="100" VerticalAlignment="Center" TickFrequency="10" TickPlacement="BottomRight" />
								<TextBlock Text="A" FontSize="24" VerticalAlignment="Center" />
							</StackPanel>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="Color" Description="Color should have sufficient contrast to the background" IsEnabled="{Binding #galleryCustomizeSystemFonts.IsChecked}">
							<ColorPicker Color="DarkGray" />
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="Opacity (%)" IsEnabled="{Binding #galleryCustomizeSystemFonts.IsChecked}">
							<Slider Minimum="0" Maximum="100" Value="100" />
						</actipro:SettingsCard>

					</actipro:SettingsExpander>

				</actipro:SettingsGroup>

				<actipro:SettingsGroup Header="More samples">

					<actipro:SettingsCard Header="Online documentation" Description="View online documentation for more details on the available controls."
										  Command="{Binding #sampleRootControl.SettingClickedCommand}" CommandParameter="Documentation">
						<actipro:SettingsCard.HeaderIcon>
							<PathIcon Data="{StaticResource icon-fluent-mdl2-book-answers}" />
						</actipro:SettingsCard.HeaderIcon>
						<actipro:SettingsCard.ActionIcon>
							<ContentPresenter ContentTemplate="{actipro:GlyphTemplate ExternalLink16}" />
						</actipro:SettingsCard.ActionIcon>
					</actipro:SettingsCard>

					<actipro:SettingsExpander Header="Controls" Description="Expand for examples of individual control types.">
						<actipro:SettingsExpander.HeaderIcon>
							<PathIcon Data="{StaticResource icon-fluent-mdl2-toolbox}" />
						</actipro:SettingsExpander.HeaderIcon>

						<actipro:SettingsCard Header="Button">
							<Button>Example Only</Button>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="Buttons">
							<StackPanel Orientation="Horizontal" Spacing="4">
								<Button Classes="theme-subtle"><ContentPresenter ContentTemplate="{actipro:GlyphTemplate MarkerTip16}" /></Button>
								<Button Classes="theme-subtle"><ContentPresenter ContentTemplate="{actipro:GlyphTemplate Menu16}" /></Button>
							</StackPanel>
						</actipro:SettingsCard>

						<actipro:SettingsCard x:Name="controlSampleCheckBox" Header="CheckBox" Description="A checkbox typically looks best when wrapped" IsWrapped="True">
							<CheckBox IsChecked="{Binding #controlSampleCheckBox.IsWrapped}">Is wrapped</CheckBox>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="ColorPicker">
							<ColorPicker Color="Orange" />
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="ComboBox">
							<ComboBox SelectedIndex="0" >
								<ComboBoxItem>Item 1</ComboBoxItem>
								<ComboBoxItem>Item 2</ComboBoxItem>
								<ComboBoxItem>Item 3</ComboBoxItem>
							</ComboBox>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="Hyperlinks">
							<StackPanel Orientation="Horizontal" Spacing="20">
								<actipro:HyperlinkTextBlock>First option</actipro:HyperlinkTextBlock>
								<actipro:HyperlinkTextBlock>Second option</actipro:HyperlinkTextBlock>
							</StackPanel>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="Slider">
							<Slider Minimum="0" Maximum="100" Value="75" TickFrequency="1" IsSnapToTickEnabled="True" />
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="TextBox (small)">
							<TextBox MinWidth="150"/>
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="TextBox (large)" IsWrapped="True" HorizontalContentAlignment="Stretch">
							<TextBox />
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="TextBox (multi-line)" IsWrapped="True" HorizontalContentAlignment="Stretch">
							<TextBox Height="100" AcceptsReturn="True" AcceptsTab="True" />
						</actipro:SettingsCard>

						<actipro:SettingsCard Header="ToggleSwitch">
							<ToggleSwitch IsChecked="True" />
						</actipro:SettingsCard>

					</actipro:SettingsExpander>

				</actipro:SettingsGroup>

			</StackPanel>
			
		</sampleBrowser:ControlExample>


		<sampleBrowser:ControlExample VerticalContentAlignment="Top"
			Header="SettingsCard usage"
			Footer="Any control can be used as the content of a SettingsCard."
			DataContext="{Binding #basicUsageCardSample}"
			>

			<actipro:SettingsGroup Header="Use SettingsCard for an individual setting">
				<actipro:SettingsCard x:Name="basicUsageCardSample"
					Header="Setting name"
					Description="Settings can have a description for additional context"
					>
					<actipro:SettingsCard.HeaderIcon>
						<PathIcon Data="{StaticResource icon-fluent-mdl2-settings}" />
					</actipro:SettingsCard.HeaderIcon>
				
					<ToggleSwitch />

				</actipro:SettingsCard>
			</actipro:SettingsGroup>

			<sampleBrowser:ControlExample.Options>
				<StackPanel Spacing="10">
					<TextBox Text="{Binding Header}" Watermark="Header" UseFloatingWatermark="True" />
					<TextBox Text="{Binding Description}" Watermark="Description" UseFloatingWatermark="True" />
					<StackPanel>
						<TextBlock Classes="theme-form-control-label" Text="{Binding WrapThreshold, StringFormat='Wrap threshold: {0}'}" />
						<Slider Minimum="50" Maximum="1000" Value="{Binding WrapThreshold}" TickFrequency="1" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="10" />
					</StackPanel>
					<CheckBox IsChecked="{Binding IsHeaderIconVisible}" Content="Is header icon visible" />
					<CheckBox IsChecked="{Binding IsEnabled}" Content="Is enabled" />
				</StackPanel>
			</sampleBrowser:ControlExample.Options>
			<sampleBrowser:ControlExample.CodeExamples>
				<sampleBrowser:CodeExample xml:space="preserve">
					<![CDATA[
<actipro:SettingsCard WrapThreshold="$(WrapThreshold)"$(IsHeaderIconVisibleAttribute)$(IsEnabledAttribute)$(HeaderAttribute)$(DescriptionAttribute)
	<actipro:SettingsCard.HeaderIcon>
		<PathIcon Data="..." />
	</actipro:SettingsCard.HeaderIcon>
	
	<ToggleSwitch />
	
</actipro:SettingsCard>
]]>
					<sampleBrowser:CodeExample.Substitutions>
						<sampleBrowser:CodeExampleSubstitution Key="DescriptionAttribute"
															   IsEnabled="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
															   Value="{Binding Description, StringFormat='&#xA;&#x9;Description=&quot;{0}&quot;'}" />
						<sampleBrowser:CodeExampleSubstitution Key="HeaderAttribute"
															   IsEnabled="{Binding Header, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
															   Value="{Binding Header, StringFormat='&#xA;&#x9;Header=&quot;{0}&quot;'}" />
						<sampleBrowser:CodeExampleSubstitution Key="WrapThreshold" Value="{Binding WrapThreshold}" />
						<sampleBrowser:CodeExampleSubstitution Key="IsHeaderIconVisibleAttribute"
															   IsEnabled="{Binding !IsHeaderIconVisible}"
															   Value=" IsHeaderIconVisible=&quot;False&quot;" />
						<sampleBrowser:CodeExampleSubstitution Key="IsEnabledAttribute"
															   IsEnabled="{Binding !IsEnabled}"
															   Value=" IsEnabled=&quot;False&quot;" />
					</sampleBrowser:CodeExample.Substitutions>
				</sampleBrowser:CodeExample>
			</sampleBrowser:ControlExample.CodeExamples>
		</sampleBrowser:ControlExample>


		<sampleBrowser:ControlExample
			Header="Actionable card"
			>

			<actipro:SettingsGroup Header="Use a clickable SettingsCard to attach an action directly to the card">

				<actipro:SettingsGroup.Styles>
					<Style Selector="actipro|SettingsCard">
						<Setter Property="IsActionIconVisible" Value="{Binding #clickableSampleIsActionIconVisible.IsChecked}" />
					</Style>
				</actipro:SettingsGroup.Styles>
				<actipro:SettingsCard Header="Command property"
					Description="Assign a 'Command' and the setting is automatically clickable."
					Command="{Binding #sampleRootControl.SettingClickedCommand}"
					CommandParameter="Clickable sample">
					<actipro:SettingsCard.ActionIcon>
						<ContentPresenter ContentTemplate="{actipro:GlyphTemplate ExternalLink16}" />
					</actipro:SettingsCard.ActionIcon>
				</actipro:SettingsCard>

				<actipro:SettingsCard x:Name="clickEventSample" Header="Click event"
					Description="Set 'IsClickEnabled=True' to respond to the 'Click' event."
					IsClickEnabled="True" Click="OnSettingClick">
					<actipro:SettingsCard.ActionIcon>
						<ContentPresenter ContentTemplate="{actipro:GlyphTemplate RightArrow16}" />
					</actipro:SettingsCard.ActionIcon>
					<CheckBox Content="Is click enabled" IsChecked="{Binding #clickEventSample.IsClickEnabled}" />
				</actipro:SettingsCard>

			</actipro:SettingsGroup>

			<sampleBrowser:ControlExample.Options>
				<StackPanel Spacing="10">
					<CheckBox x:Name="clickableSampleIsActionIconVisible" IsChecked="True" Content="Is action icon visible" />
				</StackPanel>
			</sampleBrowser:ControlExample.Options>
			<sampleBrowser:ControlExample.CodeExamples>
				<sampleBrowser:CodeExample xml:space="preserve">
					<![CDATA[
<!-- Command Sample (assumes ICommand available from DataContext) -->
<actipro:SettingsCard Header="Header here"$(IsActionIconVisibleAttribute)
	Description="Description here"
	Command="{Binding SomeCommand}" CommandParameter="OptionalParameter">
	<actipro:SettingsCard.ActionIcon>
		<ContentPresenter ContentTemplate="{actipro:GlyphTemplate ExternalLink16}" />
	</actipro:SettingsCard.ActionIcon>
</actipro:SettingsCard>

<!-- Click Event Sample (assumes code-behind Click handler) -->
<actipro:SettingsCard Header="Header here"$(IsActionIconVisibleAttribute)
	Description="Description here"
	IsClickEnabled="True" Click="OnSettingClick">
	<actipro:SettingsCard.ActionIcon>
		<ContentPresenter ContentTemplate="{actipro:GlyphTemplate ExternalLink16}" />
