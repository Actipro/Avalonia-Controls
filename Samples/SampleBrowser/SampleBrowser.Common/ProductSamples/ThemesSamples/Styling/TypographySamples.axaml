							   FontStyle="Italic" VerticalAlignment="Center" IsVisible="{Binding #showFontSizesCheckBox.IsChecked}" />
					<TextBlock x:Name="smHeading" Classes="theme-text-heading size-sm" Text="Small Heading" />
				</DockPanel>
